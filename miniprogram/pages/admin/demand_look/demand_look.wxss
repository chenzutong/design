/* pages/form/form.wxss */
/*表单、多行文本框样式*/
form,textarea{
  width: 100%;
}
/*文本输入框样式*/
.shortInput{
  width: 100rpx;
}
.longInput{
  width: 200rpx;
}


button{
  background-color: #ff2d55;
  color: white;
  margin: 20rpx;
}

label{
  color: #ff2d55;
  margin-right: 25rpx;
}
.col{
  display: flex;
  flex-direction: column;
}


.box{
  border: 2rpx solid white;
  color:black;  /*字体颜色*/
  margin: 30rpx;
  padding: 20rpx;
  box-shadow:0 1rpx 1rpx 1rpx#15161646;
  border-radius: 3%;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background: white;
}
.row{
  display: flex;
  flex-direction: row;
}

.col{
  display: flex;
  flex-direction: column;
}

.box {
  border-bottom: 1rpx solid silver;/*1rpx宽的银色实线下边框*/
  border-top: 1rpx solid  silver;
  border-left: 1rpx solid  silver;
  border-right: 1rpx solid  silver;
  margin: 10rpx 20rpx;/*上下外边距10rpx，左右外边距20rpx*/
  padding: 10rpx;/*内边距*/
}

.button-blue{
  width: 95%;
  height: 70rpx;
  background-color: white;
  color: #2577e3;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow:0 3rpx 5rpx 4rpx  #2577e3;
}
.button-white{
  width:95%;
  height: 70rpx;
  background-color: #2577e3;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow:0 3rpx 5rpx 4rpx  #2577e3;
}
